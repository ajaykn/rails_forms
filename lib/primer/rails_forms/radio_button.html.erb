<div class="form-checkbox">
  <%= @builder.label(@input.name, value: @input.value, **@context.label_arguments) do %>
    <%= @builder.radio_button(@input.name, @input.value, **@context.input_arguments) %>
    <%= @input.label %>
  <% end %>
  <% if @context.caption? %>
    <p class="note" id="<%= @context.caption_id %>"><%= @context.caption %></p>
  <% end %>
</div>
