<div class="form-group-header">
  <%= builder.label(@input.name, **@input.label_arguments) do %>
    <%= @input.label %>
    <% if @input.required? %>
      <span aria-hidden="true">*</span>
    <% end %>
  <% end %>
</div>
<div class="form-group-body">
  <%= content %>
</div>
<% if @input.invalid? %>
  <div class="color-fg-danger mt-1" id="<%= @input.validation_id %>">
    <%= render(Primer::OcticonComponent.new(icon: :"alert-fill", size: :small, aria: { hidden: true })) %>
    <span><%= @input.validation_messages.first %></span>
  </div>
<% end %>
<%= render(Caption.new(input: @input)) %>
